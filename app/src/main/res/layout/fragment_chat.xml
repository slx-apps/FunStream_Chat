<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:id="@+id/contentRoot"
        android:visibility="visible"
                android:paddingLeft="@dimen/spacing_small"
                android:paddingRight="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_small">

    <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvChat"
        app:recyclerviewClipToPadding="true"
        app:recyclerviewPadding="4dp"
        android:visibility="invisible"
        android:layout_above="@+id/chat_controls"
        >
    </com.marshalchen.ultimaterecyclerview.UltimateRecyclerView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/chat_controls"
        android:visibility="invisible"
        android:layout_alignParentRight="true">
<!--
        <Button
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/log_in"
		    android:id="@+id/btLogin"
            android:visibility="visible"/>
-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text=""
            android:id="@+id/tvTo"
            android:drawableRight="@drawable/abc_ic_clear_mtrl_alpha"
            android:singleLine="true"
            android:gravity="center"
            android:background="@drawable/to_background"
            android:paddingLeft="@dimen/spacing_smallest"
            android:textColor="#fff"
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:paddingRight="@dimen/spacing_small"/>

	    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_buttons_layout"
            android:visibility="gone">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etNewMessage"
                android:visibility="visible"
                android:layout_weight="1"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:singleLine="true" />

            <ImageButton
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/ibSmiles"
	            android:src="@drawable/ic_insert_emoticon_white_36dp"
	            android:visibility="visible"
                android:clickable="false"
                android:background="@drawable/buttons_chat"
	            android:layout_marginLeft="@dimen/spacing_smallest"
	            android:padding="@dimen/spacing_smallest"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sendMessage"
                android:src="@drawable/ic_send_white_36dp"
                android:visibility="visible"
                android:background="@drawable/buttons_chat"
                android:layout_marginLeft="@dimen/spacing_smallest"
                android:padding="@dimen/spacing_smallest"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/progress_layout">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvServerMessages"/>
    </LinearLayout>

</RelativeLayout>