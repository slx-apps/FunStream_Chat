<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal"
                android:id="@+id/messageRoot"
                android:background="@drawable/row_chat_message">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFrom"
        android:textSize="@dimen/text_size_normal"
        android:paddingLeft="@dimen/spacing_smallest"
        android:textColor="#222"
        android:background="@drawable/chat_message_user_background"
        android:paddingRight="@dimen/spacing_smallest"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvFrom"
        android:layout_toEndOf="@+id/tvFrom"
        android:layout_marginLeft="@dimen/spacing_big"
        android:layout_marginStart="@dimen/spacing_big"
        android:textSize="@dimen/text_size_small"
        android:textColor="#222"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvText"
        android:layout_below="@+id/tvFrom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/spacing_smallest"
        android:textSize="@dimen/text_size_smaller"
        android:padding="2dp"
        android:textColor="#222"
        android:autoLink="web|email"
	    />

</RelativeLayout>